{% extends 'layouts/layout-full-width.html.twig' %}

{% block title %}article | home{% endblock %}

{% block actionBar %}
<div class="container mb-4">
    <div class="structural-row-center-end">
        <a href="{{ path('app_article_create') }}">
            <button class="btn btn-lg btn-outline-danger">AJOUTER</button>
        </a>
    </div>
  </div> 
{% endblock %}

{% block contentFullWidth %}
{{ include('template-parts/general-notifs.html.twig') }}

<div class="container">
    <h1>Liste des t√¢ches</h1>
    <ul id="article-list">

    {% for article in articles %}

    <li>

      <div class="card" style="width: 18rem;">

        <img src="{{ article.cover == defaultImg ? article.cover : app.request.getSchemeAndHttpHost() ~ asset('assets/img/cover_img/') ~ article.cover }}" class="card-img-top" alt="cover">

        <div class="card-body">

          <h5 class="card-title">{{ article.name }}</h5>

          <p class="card-text">{{ article.description|u.truncate(70,'...') }}</p>

          <div class="d-flex flex-row justify-content-between align-items-center w-100 mt-5">

            <a href="{{ path('app_article_delete', {'id': article.id}) }}" class="btn btn-danger">
              <span class="material-symbols-outlined">delete</span>
            </a>

            <a href="{{ path('app_article_update', {'id': article.id}) }}" class="btn btn-primary">Voir/Modifier</a>
            
          </div>


        </div>

      </div>

    </li>

    {% endfor %}

  </ul>
</div>

{% endblock %}
