{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="login">
    <form method="post">
        {# {% if error %} #}
            {# <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
        {# {% endif %} #}

        {# {% if app.user %} #}
            <div class="mb-3">
                {# You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a> #}
            </div>
        {# {% endif %} #}
        <div class="wrapper">
        <h1 class="title-login">Se Connecter</h1>
        
        <div class="input-box">
            <label for="username">Adresse Mail <span>*</span></label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="loginput" autocomplete="email" placeholder="Votre adresse mail ici" required autofocus><i class='bx bxs-user'></i>
        </div>
        
        <div class="input-box">
            <label for="password">Mot de passe <span>*</span></label>
            <input type="password" name="_password" id="password" class="loginput" autocomplete="current-password" placeholder="Votre mot de passe ici" required><i class='bx bxs-lock-alt'></i>
        </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn-login" type="submit">
                Connexion
            </button>
              <div class="register-link">
        <p>Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous !</a></p>
      </div>
        </div>
    </form>    
{% endblock %}
